@page
@model lab4.Pages.StudentManagement.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Name)
        </dd>
    </dl>
</div>
<div>
    <hr />
    <h2>Academic Records</h2>
    <table class="table">
        <thead>
            <tr>
                <th>
                    <a asp-page="./Details" asp-route-id="@Model.Student.Id" asp-route-sortBy="title">Course Title</a>
                </th>
                <th>
                    <a asp-page="./Details" asp-route-id="@Model.Student.Id" asp-route-sortBy="grade">Grade</a>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var record in Model.Student.Academicrecords)
            {
                <tr>
                    <td>@record.CourseCodeNavigation.Title</td>
                    <td>@record.Grade</td>
                    <td></td>
                </tr>
                
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Student.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
